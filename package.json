{
  "name": "test-ci",
  "version": "0.3.1",
  "description": "Simple Node.js app to exercise the CI workflows.",
  "main": "src/index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "test": "node --test",
    "lint": "npm run format:check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "changelog": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s -r 0 && node scripts/ensure-changelog-header.js"
  },
  "keywords": [
    "ci",
    "demo"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "conventional-changelog-cli": "^5.0.0",
    "prettier": "^3.3.3"
  }
}
